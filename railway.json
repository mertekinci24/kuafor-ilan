{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "python manage.py collectstatic --noinput"
  },
  "deploy": {
    "startCommand": "python manage.py migrate --noinput && gunicorn kuafor_ilan.wsgi:application --bind 0.0.0.0:$PORT --workers 3 --timeout 120"
  }
}
